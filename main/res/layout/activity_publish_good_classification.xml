<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".publish.PublishGoodClassification">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorPrimaryDark">

        <ImageView
            android:id="@+id/PublishGoodClassify_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:padding="15dp"
            android:src="@drawable/picture_back"
            android:visibility="visible" />

        <TextView
            android:id="@+id/PublishGoodClassify_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:maxEms="11"
            android:text="分类"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/PublishGoodClassify_publish"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:text="确认"
            android:textColor="#F8F7F7"
            android:textSize="15sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="20dip">

        <CheckBox
            android:id="@+id/checkbox1"
            style="@style/select_style"
            android:tag="chb1"
            android:text="手机" />

        <CheckBox
            android:id="@+id/checkbox2"
            style="@style/select_style"
            android:tag="chb2"
            android:text="生鲜水果" />

        <CheckBox
            android:id="@+id/checkbox3"
            style="@style/select_style"
            android:tag="chb3"
            android:text="游戏" />

        <CheckBox
            android:id="@+id/checkbox4"
            style="@style/select_style"
            android:tag="chb4"
            android:text="电子零件" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="20dip">

        <CheckBox
            android:id="@+id/checkbox5"
            style="@style/select_style"
            android:tag="chb6"
            android:text="图书" />

        <CheckBox
            android:id="@+id/checkbox6"
            style="@style/select_style"
            android:tag="chb7"
            android:text="动漫/周边" />

        <CheckBox
            android:id="@+id/checkbox7"
            style="@style/select_style"
            android:tag="chb7"
            android:text="宠物/用品" />
        <CheckBox
            android:id="@+id/checkbox8"
            style="@style/select_style"
            android:tag="chb7"
            android:text="网络设备" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="20dip">

        <CheckBox
            android:id="@+id/checkbox9"
            style="@style/select_style"
            android:tag="chb6"
            android:text="办公用品" />

        <CheckBox
            android:id="@+id/checkbox10"
            style="@style/select_style"
            android:tag="chb7"
            android:text="游戏设备" />

        <CheckBox
            android:id="@+id/checkbox11"
            style="@style/select_style"
            android:tag="chb7"
            android:text="运动户外" />
        <CheckBox
            android:id="@+id/checkbox12"
            style="@style/select_style"
            android:tag="chb7"
            android:text="玩具乐器" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="20dip">

        <CheckBox
            android:id="@+id/checkbox13"
            style="@style/select_style"
            android:tag="chb6"
            android:text="家用电器" />

        <CheckBox
            android:id="@+id/checkbox14"
            style="@style/select_style"
            android:tag="chb7"
            android:text="骑行用具" />

        <CheckBox
            android:id="@+id/checkbox15"
            style="@style/select_style"
            android:tag="chb7"
            android:text="3C数码" />
        <CheckBox
            android:id="@+id/checkbox16"
            style="@style/select_style"
            android:tag="chb7"
            android:text="音像" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="20dip">

        <CheckBox
            android:id="@+id/checkbox17"
            style="@style/select_style"
            android:tag="chb6"
            android:text="门票" />

        <CheckBox
            android:id="@+id/checkbox18"
            style="@style/select_style"
            android:tag="chb7"
            android:text="居家日用" />

        <CheckBox
            android:id="@+id/checkbox19"
            style="@style/select_style"
            android:tag="chb7"
            android:text="实体卡片" />
        <CheckBox
            android:id="@+id/checkbox20"
            style="@style/select_style"
            android:tag="chb7"
            android:text="其他" />

    </LinearLayout>

</LinearLayout>