<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@drawable/shape">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <ImageView
            android:id="@+id/shequ_photo"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/cat"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/shequuser"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/shequ_head_photo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/cat"

                />
            <TextView
                android:id="@+id/shequ_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:maxLength="15"
                android:text="123"
                android:textColor="@color/white"
                android:textSize="10sp"
                />
            <TextView
                android:id="@+id/shequ_love"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:gravity="right"
                android:maxLength="22"
                android:text="321人赞了"
                android:textColor="@color/color_eeeeee"
                android:textSize="8sp"
                />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/shequ_talk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="20"
            android:text="#我要吃饭#"
            android:textColor="@color/blue"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/shequ_content"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="22"
            android:textColor="@color/black"
            android:text="今天吃了好多"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/shequ_origin"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="22"
            android:textColor="@color/bar_grey"
            android:text="来自吃饭社区"
            android:textSize="12sp"/>
    </LinearLayout>

</LinearLayout>